rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES DE APOYO ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data;
    }

    // Funciones de Rol
    function isRoot() { return getUserData().rol == 'root'; }
    function isAdmin() { return getUserData().rol == 'admin'; }
    function isJefe() { return getUserData().rol == 'jefe departamento academico'; }

    // --- REGLAS DE PROYECTOS ---
    match /proyectos/{proyectoId} {
      allow read: if isAuthenticated();
      // Root, Admin y Jefe pueden gestionar proyectos
      allow write: if isAuthenticated() && (isRoot() || isAdmin() || isJefe());
    }

    // --- REGLAS DE USUARIOS ---
    match /usuarios/{userId} {
      // Lectura: Cualquier involucrado o jerarquía superior
      allow read: if isAuthenticated() && (request.auth.uid == userId || isRoot() || isAdmin() || isJefe());
      
      // Actualización 
      // - El usuario su propio perfil.
      // - Root y Admin control general.
      // - Jefe solo para asignar asesores o gestionar sus datos.
      allow update: if isAuthenticated() && (request.auth.uid == userId || isRoot() || isAdmin() || isJefe());

      // Creación 
      // - El Jefe puede crear asesores. Root y Admin pueden crear usuarios.
      allow create: if isAuthenticated() && (isRoot() || isAdmin() || isJefe());

      // Eliminación
      allow delete: if isAuthenticated() && (isRoot() || isAdmin() || isJefe());
    }
  }
}